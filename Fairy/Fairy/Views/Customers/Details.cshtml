@model Fairy.Models.Customer
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li>Membership Type: @Model.MembershipType.Name</li>
    @if (Model.BrithDate.HasValue)
    {
        <li>Brithdate: @Model.BrithDate.Value.ToShortDateString()</li>
    }
</ul>